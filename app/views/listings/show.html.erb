<div class="row">

  <!-- Image Left side -->
  <div class="span8">
    <div class="well">

        <%= image_tag @listing.image %>

        <p>
          <strong>Title:</strong>
          <%= @listing.title %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @listing.description %>
        </p>
        <% if current_user == @listing.user %>
          <%= link_to 'Edit', edit_listing_path(@listing) %> |
        <% end %>
        <%= link_to 'Back', listings_path %>
    </div>
  </div>

  <!-- Descriptions Side Right -->
  <div class="span3">

  </div>
</div>
